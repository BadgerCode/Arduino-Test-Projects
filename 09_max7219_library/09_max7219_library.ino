  // put your setup code here, to run once:

  LedController = new MAX7219Control(FACE_DATAPIN, FACE_CSPIN, FACE_CLKPIN, FACE_NUMPANELS);
  LedController->Initialise();
  LedController->SetBrightness(7); // 0-15
